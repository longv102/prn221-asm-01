<Window x:Class="VuLongWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="480" MinHeight="250" MinWidth="480">
    <Grid Background="AliceBlue">
        <TextBlock HorizontalAlignment="Left" Margin="132,10,0,0" TextWrapping="Wrap" Text="FU News Management System" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="75,56,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Center"/>

        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="151,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="151,0,0,0" VerticalAlignment="Center" Width="246"/>

        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="91,154,0,0" VerticalAlignment="Top" Height="41" Width="112" Click="btnLogin_Click"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="307,154,0,0" VerticalAlignment="Top" Height="41" Width="112" Click="btnClose_Click"/>

    </Grid>
</Window>
